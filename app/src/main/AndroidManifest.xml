<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.money.moneyworld">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MoneyWorld"
        android:usesCleartextTraffic="true">
        <activity android:name=".UI.Activity.WithDraw_Money"
            android:theme="@style/Theme.MoneyWorld.NoActionBar" ></activity>
        <activity
            android:name=".UI.Activity.Update_Profile"
            android:theme="@style/Theme.MoneyWorld.NoActionBar" />
        <activity
            android:name=".UI.Activity.Add_Money"
            android:theme="@style/Theme.MoneyWorld.NoActionBar" />
        <activity
            android:name=".UI.Activity.PlayingGame2"
            android:theme="@style/Theme.MoneyWorld.NoActionBar" />
        <activity
            android:name=".UI.Activity.PlayingGame1"
            android:theme="@style/Theme.MoneyWorld.NoActionBar" />
        <activity
            android:name=".authentication.Change_Password"
            android:theme="@style/Theme.MoneyWorld.NoActionBar" />
        <activity
            android:name=".authentication.ForgotPassword"
            android:theme="@style/Theme.MoneyWorld.NoActionBar" />
        <activity
            android:name=".authentication.Successfully_Screen"
            android:theme="@style/Theme.MoneyWorld.NoActionBar" />
        <activity
            android:name=".authentication.Verify_otp"
            android:theme="@style/Theme.MoneyWorld.NoActionBar" />
        <activity
            android:name=".authentication.SignIn"
            android:theme="@style/Theme.MoneyWorld.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".authentication.SignUp"
            android:theme="@style/Theme.MoneyWorld.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.MoneyWorld.NoActionBar" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
        <meta-data
            android:name="com.razorpay.ApiKey"
            android:value="@string/rozerpay_api_key" />
    </application>

</manifest>