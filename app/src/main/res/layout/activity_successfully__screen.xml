<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/status_color"
    tools:context=".authentication.Successfully_Screen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/sucess"
            android:layout_width="match_parent"
            android:layout_height="310dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_verification_10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_create_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Account is created"
            android:textAlignment="center"
            android:textSize="30dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/successfully"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sucessfully"
            android:textSize="60dp"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="center"
            />
        <Button
            android:id="@+id/btn_done"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Done"
            android:textColor="#000"
            android:textStyle="bold"
            android:background="@drawable/verifying_textview"
            android:layout_below="@id/successfully"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

    </LinearLayout>

   </ScrollView>

</layout>