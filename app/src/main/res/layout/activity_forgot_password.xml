<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/status_color"
        android:orientation="vertical"
        tools:context=".authentication.ForgotPassword">


        <TextView
            android:id="@+id/create"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_signup"
            android:layout_marginStart="15dp"
            android:layout_marginTop="100dp"
            android:layout_marginRight="15dp"
            android:fontFamily="@font/montserrat"
            android:gravity="start"
            android:text="Forgot Password"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/hello"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/create"
            android:layout_marginStart="15dp"
            android:layout_marginRight="15dp"
            android:fontFamily="@font/montserrat"
            android:gravity="start"
            android:text="Hello, Nice to meet you."
            android:textColor="@color/white"
            android:textSize="12dp"
            android:textStyle="normal" />


        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/hello"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/verifying_textview"
            android:drawableLeft="@drawable/ic_baseline_mail_outline_24"
            android:drawablePadding="15dp"
            android:hint="Enter Register Phone Number"
            android:inputType="textEmailAddress"
            android:paddingStart="10dp"
            android:textColor="@color/white"
            android:textColorHint="@android:color/darker_gray" />




        <androidx.cardview.widget.CardView
            android:id="@+id/card_next"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="15dp"
            app:cardBackgroundColor="@color/button_color"
            app:cardCornerRadius="@dimen/margin_10"
            app:cardElevation="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/montserrat"
                android:text="Next"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>


    </LinearLayout>
</layout>