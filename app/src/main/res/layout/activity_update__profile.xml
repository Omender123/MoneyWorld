<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UI.Activity.Update_Profile"
    android:background="@color/status_color">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/toolbar_color"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"/>

   <androidx.core.widget.NestedScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:padding="10dp"
           android:orientation="vertical">

           <EditText
               android:id="@+id/name"
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:layout_marginLeft="15dp"
               android:layout_marginRight="15dp"
               android:layout_marginTop="30dp"
               android:hint="Name"
               android:textColor="@color/white"
               android:inputType="text"
               android:drawableLeft="@drawable/ic_user_name"
               android:drawablePadding="15dp"
               android:paddingStart="10dp"
               android:textColorHint="@android:color/darker_gray"
               android:background="@drawable/verifying_textview"
               android:layout_marginBottom="5dp"/>

           <EditText
               android:id="@+id/email"
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:layout_marginLeft="15dp"
               android:layout_marginRight="15dp"
               android:layout_marginTop="20dp"
               android:hint="Email"
               android:textColor="@color/white"
               android:inputType="textEmailAddress"
               android:drawableLeft="@drawable/ic_baseline_mail_outline_24"
               android:drawablePadding="15dp"
               android:paddingStart="10dp"
               android:textColorHint="@android:color/darker_gray"
               android:background="@drawable/verifying_textview"
               android:layout_marginBottom="5dp"/>
           <EditText
               android:id="@+id/number"
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:layout_marginLeft="15dp"
               android:layout_marginRight="15dp"
               android:layout_marginTop="20dp"
               android:hint="Phone Number"
               android:textColor="@color/white"
               android:inputType="number"
               android:drawableLeft="@drawable/ic_phone"
               android:drawablePadding="15dp"
               android:paddingStart="10dp"
               android:textColorHint="@android:color/darker_gray"
               android:background="@drawable/verifying_textview"
               android:layout_marginBottom="5dp"/>
           <EditText
               android:id="@+id/password"
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:layout_marginLeft="15dp"
               android:layout_marginRight="15dp"
               android:layout_marginTop="20dp"
               android:hint="Old Password"
               android:textColor="@color/white"
               android:inputType="textPassword"
               android:drawableLeft="@drawable/ic_passcode"
               android:drawablePadding="15dp"
               android:paddingStart="10dp"
               android:textColorHint="@android:color/darker_gray"
               android:background="@drawable/verifying_textview"
               android:layout_marginBottom="5dp"/>
           <EditText
               android:id="@+id/c_password"
               android:layout_width="match_parent"
               android:layout_height="50dp"
               android:layout_marginLeft="15dp"
               android:layout_marginRight="15dp"
               android:layout_marginTop="20dp"
               android:hint="New Password"
               android:textColor="@color/white"
               android:inputType="textPassword"
               android:drawableLeft="@drawable/ic_passcode"
               android:drawablePadding="15dp"
               android:paddingStart="10dp"
               android:textColorHint="@android:color/darker_gray"
               android:background="@drawable/verifying_textview"
               android:layout_marginBottom="5dp"/>



           <androidx.cardview.widget.CardView
               android:id="@+id/card_signup"
               android:layout_width="match_parent"
               android:layout_marginTop="40dp"
               android:layout_marginLeft="15dp"
               android:layout_marginRight="15dp"
               app:cardCornerRadius="@dimen/margin_10"
               app:cardBackgroundColor="@color/button_color"
               app:cardElevation="5dp"
               android:layout_height="50dp"
               android:layout_marginBottom="20dp">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:text="Update"
                   android:textColor="@color/white"
                   android:textSize="18sp"
                   android:textStyle="bold"
                   android:fontFamily="@font/montserrat"/>

           </androidx.cardview.widget.CardView>

       </LinearLayout>
   </androidx.core.widget.NestedScrollView>

</LinearLayout>
</layout>