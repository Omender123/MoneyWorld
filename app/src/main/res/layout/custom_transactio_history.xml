<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/status_color"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   >
    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="80dp"
         android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="5dp"
        app:cardBackgroundColor="@color/toolbar_color"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="15dp">

        <View
            android:id="@+id/view"
            android:layout_width="5dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:background="@color/button_color" />

            <TextView
                android:id="@+id/transaction_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="14dp"
                android:layout_toStartOf="@+id/transaction_amount"
                android:layout_toEndOf="@+id/view"
                android:text="PAY"
                android:fontFamily="@font/montserrat"
                android:layout_marginRight="5dp"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/transaction_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="14dp"
                android:layout_marginRight="15dp"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat"
                android:layout_alignParentRight="true"
                android:text="â‚¹ 210"
                android:textSize="14dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/transaction_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/transaction_status"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_toStartOf="@+id/layout"
                android:layout_toEndOf="@+id/view"
                android:text="OmenderSingh"
                android:fontFamily="@font/montserrat"
                android:layout_marginRight="5dp"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:textStyle="normal" />

            <LinearLayout
                android:id="@+id/layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:layout_below="@id/transaction_amount"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp">

                <TextView
                    android:id="@+id/transaction_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="19 hours ago"
                    android:textColor="@color/white"
                    android:fontFamily="@font/montserrat"
                    android:textSize="10dp"
                    android:textStyle="normal"/>
                <TextView
                    android:id="@+id/transaction_Time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="10:30"
                    android:textColor="@color/white"
                    android:fontFamily="@font/montserrat"
                    android:maxLength="8"
                    android:textSize="10dp"
                    android:textStyle="normal"/>
            </LinearLayout>



        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>