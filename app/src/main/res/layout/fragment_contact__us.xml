<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/status_color"
    tools:context=".Fragment.Contact_Us">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/toolbar_color"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="5dp"
        android:elevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="5dp">

            <View
                android:id="@+id/view"
                android:layout_width="5dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/button_color" />


            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/backup"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:fontFamily="@font/montserrat"
                android:text="Email Address"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/backup"
                android:layout_below="@id/text"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="2dp"
                android:textSize="10dp"
                android:textColor="@color/white"
                android:textStyle="normal"
                android:fontFamily="@font/montserrat"
                android:text="moneyworld013@gmail.com"
                android:justificationMode="inter_word"
                />
            <ImageView
                android:id="@+id/backup"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignLeft="@id/view"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="17dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_baseline_mail_outline_24"
                app:tint="@color/white" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_phone_no."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/toolbar_color"
        android:layout_below="@id/card_email"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="5dp"

        android:elevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="5dp">

            <View
                android:id="@+id/view1"
                android:layout_width="5dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/button_color" />


            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/backup1"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="17dp"
                android:textStyle="bold"
                android:text="Phone No."
                android:fontFamily="@font/montserrat"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/backup1"
                android:layout_below="@id/text2"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/montserrat"
                android:layout_marginTop="2dp"
                android:textSize="10dp"
                android:text="+919521835167"
                android:textColor="@color/white"
                android:textStyle="normal"
                android:justificationMode="inter_word"
                />
            <ImageView
                android:id="@+id/backup1"
                android:layout_width="24dp"
                android:layout_height="20dp"
                android:layout_alignLeft="@id/view1"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="17dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_phone" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_HelpLine_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/toolbar_color"
        android:layout_below="@id/card_email"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="5dp"

        android:elevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="5dp">

            <View
                android:id="@+id/view3"
                android:layout_width="5dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/button_color" />


            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/backup2"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="17dp"
                android:textStyle="bold"
                android:text="HelpLine No."
                android:fontFamily="@font/montserrat"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/backup2"
                android:layout_below="@id/text1"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/montserrat"
                android:layout_marginTop="2dp"
                android:textSize="10dp"
                android:text="+919899764372"
                android:textColor="@color/white"
                android:textStyle="normal"
                android:justificationMode="inter_word"
                />
            <ImageView
                android:id="@+id/backup2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignLeft="@id/view3"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="17dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_helpline" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_webSite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/toolbar_color"
        android:layout_below="@id/card_phone_no."
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="5dp"

        android:elevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="5dp">

            <View
                android:id="@+id/view2"
                android:layout_width="5dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/button_color" />


            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/backup3"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="17dp"
                android:textStyle="bold"
                android:text="Web Site"
                android:fontFamily="@font/montserrat"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/backup3"
                android:layout_below="@id/text3"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/montserrat"
                android:textSize="10dp"
                android:text="www.google.com"
                android:textColor="@color/white"
                android:textStyle="normal"
                android:justificationMode="inter_word"
                />
            <ImageView
                android:id="@+id/backup3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignLeft="@id/view2"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="17dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_contact_details_website" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>
</layout>