<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/status_color"
        tools:context=".authentication.SignUp">

        <TextView
            android:id="@+id/text_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:text="SignUp"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/create"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_signup"
            android:layout_marginStart="15dp"
            android:layout_marginTop="60dp"
            android:layout_marginRight="15dp"
            android:fontFamily="@font/montserrat"
            android:gravity="start"
            android:text="Create Your Account"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:textStyle="bold" />


         <TextView
             android:id="@+id/hello"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/create"
            android:layout_marginStart="15dp"
            android:layout_marginRight="15dp"
            android:fontFamily="@font/montserrat"
            android:gravity="start"
            android:text="Hello, Nice to meet you."
            android:textColor="@color/white"
            android:textSize="12dp"
            android:textStyle="normal" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/hello"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
           >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="20dp"
                    android:hint="Name"
                    android:textColor="@color/white"
                    android:inputType="text"
                    android:drawableLeft="@drawable/ic_user_name"
                    android:drawablePadding="15dp"
                    android:paddingStart="10dp"
                    android:textColorHint="@android:color/darker_gray"
                    android:background="@drawable/verifying_textview"
                    android:layout_marginBottom="5dp"/>

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="20dp"
                    android:hint="Email"
                    android:textColor="@color/white"
                    android:inputType="textEmailAddress"
                    android:drawableLeft="@drawable/ic_baseline_mail_outline_24"
                    android:drawablePadding="15dp"
                    android:paddingStart="10dp"
                    android:textColorHint="@android:color/darker_gray"
                    android:background="@drawable/verifying_textview"
                    android:layout_marginBottom="5dp"/>
                <EditText
                    android:id="@+id/number"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="20dp"
                    android:hint="Phone Number"
                    android:textColor="@color/white"
                    android:inputType="number"
                    android:drawableLeft="@drawable/ic_phone"
                    android:drawablePadding="15dp"
                    android:paddingStart="10dp"
                    android:textColorHint="@android:color/darker_gray"
                    android:background="@drawable/verifying_textview"
                    android:layout_marginBottom="5dp"/>
                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="20dp"
                    android:hint="Password"
                    android:textColor="@color/white"
                    android:inputType="textPassword"
                    android:drawableLeft="@drawable/ic_passcode"
                    android:drawablePadding="15dp"
                    android:paddingStart="10dp"
                    android:textColorHint="@android:color/darker_gray"
                    android:background="@drawable/verifying_textview"
                    android:layout_marginBottom="5dp"/>
                <EditText
                    android:id="@+id/c_password"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="20dp"
                    android:hint="Confirm Password"
                    android:textColor="@color/white"
                    android:inputType="textEmailAddress"
                    android:drawableLeft="@drawable/ic_passcode"
                    android:drawablePadding="15dp"
                    android:paddingStart="10dp"
                    android:textColorHint="@android:color/darker_gray"
                    android:background="@drawable/verifying_textview"
                    android:layout_marginBottom="5dp"/>



                 <androidx.cardview.widget.CardView
                     android:id="@+id/card_signup"
                     android:layout_width="match_parent"
                     android:layout_marginTop="40dp"
                     android:layout_marginLeft="15dp"
                     android:layout_marginRight="15dp"
                     app:cardCornerRadius="@dimen/margin_10"
                     app:cardBackgroundColor="@color/purple_500"
                     app:cardElevation="5dp"
                     android:layout_height="50dp"
                     android:layout_marginBottom="20dp">
                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_gravity="center"
                         android:text="SignUp"
                         android:textColor="@color/white"
                         android:textSize="18sp"
                         android:textStyle="bold"
                         android:fontFamily="@font/montserrat"/>

                 </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="I Already Have Account"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/text_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Login"
                        android:layout_marginStart="@dimen/margin_5"
                        android:textColor="@color/teal_200"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                </LinearLayout>
             </LinearLayout>

        </ScrollView>




    </RelativeLayout>

</layout>