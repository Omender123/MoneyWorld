<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MoneyWorld" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/button_color</item>
        <item name="colorPrimaryVariant">#242424</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:colorPrimaryDark">@color/status_color</item> <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MoneyWorld.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="statusBarBackground">@color/status_color</item>
    </style>

    <style name="Theme.MoneyWorld.NavigationView">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="itemTextColor">@color/white</item>
        <item name="colorOnSecondary">@color/purple_700</item>
      <item name="itemStrokeColor">@color/purple_700</item>



    </style>
</resources>